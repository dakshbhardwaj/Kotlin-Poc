<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etNumberText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#65898D"
        android:ems="10"
        android:gravity="bottom|end"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:paddingRight="20dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D1D1D1"
            android:paddingBottom="1dip">

            <Button
                android:id="@+id/btnClearAll"
                style="?android:attr/buttonBarNeutralButtonStyle"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="onClearPress"
                android:text="AC"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnNegate"
                style="?android:attr/segmentedButtonStyle"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="onNumberButtonPress"
                android:text="+/-"
                android:textColor="#008577"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnPercent"
                style="?android:attr/buttonBarNeutralButtonStyle"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="onPercentPress"
                android:text="%"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnDiv"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#FFA424"
                android:onClick="OnOperationButtonPress"
                android:text="/"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D1D1D1"
            android:paddingBottom="1dip">

            <Button
                android:id="@+id/btn7"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="onNumberButtonPress"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn8"
                style="?android:attr/segmentedButtonStyle"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="onNumberButtonPress"
                android:text="8"
                android:textColor="#008577"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn9"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="onNumberButtonPress"
                android:text="9"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnMult"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#FFA424"
                android:onClick="OnOperationButtonPress"
                android:text="*"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D1D1D1"
            android:paddingBottom="1dip">

            <Button
                android:id="@+id/btn4"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="onNumberButtonPress"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn5"
                style="?android:attr/segmentedButtonStyle"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="onNumberButtonPress"
                android:text="5"
                android:textColor="#008577"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn6"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="onNumberButtonPress"
                android:text="6"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnSub"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#FFA424"
                android:onClick="OnOperationButtonPress"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D1D1D1"
            android:paddingBottom="1dip">

            <Button
                android:id="@+id/btn1"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="onNumberButtonPress"
                android:text="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn2"
                style="?android:attr/segmentedButtonStyle"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="onNumberButtonPress"
                android:text="2"
                android:textColor="#008577"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn3"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#D6D6D6"
                android:onClick="onNumberButtonPress"
                android:text="3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnAdd"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#FFA424"
                android:onClick="OnOperationButtonPress"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn0"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:background="#D6D6D6"
            android:onClick="onNumberButtonPress"
            android:text="0"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnDot"
            style="?android:attr/segmentedButtonStyle"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#D6D6D6"
            android:onClick="onNumberButtonPress"
            android:text="."
            android:textColor="#008577"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnEquals"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#FFA424"
            android:onClick="OnEqualsPress"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>