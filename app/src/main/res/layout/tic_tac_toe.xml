<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D3D3D3"
        android:gravity="center">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn00"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:backgroundTint="#FFFFFF"
                android:onClick="onButtonClick"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn01"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginLeft="4pt"
                android:backgroundTint="#FFFFFF"
                android:onClick="onButtonClick"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn02"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginLeft="4pt"
                android:backgroundTint="#FFFFFF"
                android:onClick="onButtonClick"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4pt"
            android:gravity="center">


            <Button
                android:id="@+id/btn10"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:backgroundTint="#FFFFFF"
                android:onClick="onButtonClick"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn11"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginLeft="4pt"
                android:backgroundTint="#FFFFFF"
                android:onClick="onButtonClick"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn12"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginLeft="4pt"
                android:backgroundTint="#FFFFFF"
                android:onClick="onButtonClick"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4pt"
            android:gravity="center">


            <Button
                android:id="@+id/btn20"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:backgroundTint="#FFFFFF"
                android:onClick="onButtonClick"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn21"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginLeft="4pt"
                android:backgroundTint="#FFFFFF"
                android:onClick="onButtonClick"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btn22"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginLeft="4pt"
                android:backgroundTint="#FFFFFF"
                android:onClick="onButtonClick"
                android:textSize="34sp" />
        </TableRow>
    </TableLayout>


    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Reset"
        app:layout_constraintEnd_toStartOf="@+id/tvPlayer2"
        app:layout_constraintStart_toEndOf="@+id/tvPlayer1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPlayer1Count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayer1" />

    <TextView
        android:id="@+id/tvPlayer2Count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayer2" />

    <TextView
        android:id="@+id/tvPlayer2"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="50dp"
        android:text="Player 2 wins"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPlayer1"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:text="Player 1 wins"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
  </androidx.constraintlayout.widget.ConstraintLayout>
